<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Athletes Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('../partials/header.ejs') %>

    <div class="container">
        <h1>Athletes List</h1>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>County</th>
                    <th>Specialization</th>
                    <th>Years Active</th>
                    <th>Achievements</th>
                </tr>
            </thead>
            <tbody>
                <% athletes.forEach(athlete => { %>
                    <tr>
                        <td><%= athlete.id %></td>
                        <td><%= athlete.first_name %> <%= athlete.last_name %></td>
                        <td><%= athlete.email %></td>
                        <td><%= athlete.county_origin %></td>
                        <td><%= athlete.specialization %></td>
                        <td><%= athlete.years_active %></td>
                        <td><%= athlete.achievements ? JSON.stringify(athlete.achievements) : 'None' %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <%- include('../partials/footer.ejs') %>
</body>
</html>