<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Achievements ‚Ä¢ KenyanAthletes</title>
  <style>
    :root{
      --bg:#f5f5dc; /* Light grey-brown background */
      --card:#ffffff;
      --accent:#8b0000; /* Dark red accent */
      --muted:#696969; /* Grey-brown muted text */
      --glass: rgba(139,0,0,0.06); /* Dark red glass effect */
      --radius:14px;
      --shadow: 0 10px 30px rgba(139,0,0,0.06); /* Dark red shadow */
      --secondary:#a0522d; /* Sienna for secondary elements */
      --highlight:#daa520; /* Goldenrod for highlights */
      --gold:#ffd700;
      --silver:#c0c0c0;
      --bronze:#cd7f32;
    }

    *{box-sizing:border-box}
    html,body{height:100%}
    body{
      margin:0;
      font-family: "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
      background: linear-gradient(180deg,#f8fbfb 0%,var(--bg) 60%);
      color:#0b2b23;
      -webkit-font-smoothing:antialiased;
      -moz-osx-font-smoothing:grayscale;
      padding:2rem;
    }

    .container{max-width:1200px;margin:0 auto}
    .page-header{
      background: linear-gradient(135deg,var(--accent),var(--secondary));
      color:white;
      padding:2rem;
      border-radius:var(--radius);
      margin-bottom:2rem;
      box-shadow:var(--shadow);
      text-align:center;
    }
    .page-header h1{margin:0;font-size:2.5rem}
    .page-header p{margin:0.5rem 0 0;font-size:1.1rem;opacity:0.9}

    .filters{
      background:var(--card);
      padding:1.5rem;
      border-radius:var(--radius);
      box-shadow:var(--shadow);
      margin-bottom:2rem;
      display:flex;
      gap:1rem;
      flex-wrap:wrap;
      align-items:center;
    }
    .filters label{font-weight:600;color:#042a23;margin-right:0.5rem}
    .filters select{
      padding:0.5rem;
      border:1px solid rgba(0,0,0,0.1);
      border-radius:6px;
      background:white;
      font-size:0.9rem;
    }

    .achievements-grid{display:grid;grid-template-columns:repeat(auto-fill,minmax(350px,1fr));gap:1.5rem}
    .achievement-card{
      background:var(--card);
      border-radius:var(--radius);
      box-shadow:var(--shadow);
      overflow:hidden;
      border:1px solid rgba(0,0,0,0.04);
      transition:transform 0.2s,box-shadow 0.2s;
    }
    .achievement-card:hover{transform:translateY(-2px);box-shadow:0 15px 40px rgba(139,0,0,0.1)}

    .achievement-header{
      background:linear-gradient(135deg,var(--accent),var(--secondary));
      color:white;
      padding:1rem;
      position:relative;
    }
    .medal-badge{
      position:absolute;
      top:1rem;
      right:1rem;
      width:40px;
      height:40px;
      border-radius:50%;
      display:flex;
      align-items:center;
      justify-content:center;
      font-size:1.2rem;
      font-weight:bold;
      color:white;
    }
    .medal-badge.gold{background:var(--gold)}
    .medal-badge.silver{background:var(--silver)}
    .medal-badge.bronze{background:var(--bronze)}
    .medal-badge.none{background:linear-gradient(135deg,var(--muted),#999)}

    .achievement-content{padding:1.25rem}
    .athlete-name{font-size:1.2rem;font-weight:700;color:#042a23;margin-bottom:0.5rem}
    .event-name{font-size:1.1rem;color:var(--accent);font-weight:600;margin-bottom:0.5rem}
    .event-details{color:var(--muted);font-size:0.9rem;margin-bottom:1rem}
    .event-details strong{color:#042a23}
    .description{color:#042a23;font-size:0.95rem;line-height:1.5;margin-bottom:1rem}

    .stats-section{
      display:grid;
      grid-template-columns:repeat(auto-fit,minmax(120px,1fr));
      gap:1rem;
      margin-bottom:1rem;
    }
    .stat-item{text-align:center;padding:0.75rem;background:linear-gradient(180deg,#fff,#fcfffb);border-radius:8px;border:1px solid #eef6f1}
    .stat-label{font-size:0.8rem;color:var(--muted);text-transform:uppercase;letter-spacing:0.5px;margin-bottom:0.25rem}
    .stat-value{font-size:1.1rem;font-weight:700;color:#042a23}

    .no-achievements{
      grid-column:1/-1;
      text-align:center;
      padding:3rem;
      color:var(--muted);
      font-size:1.1rem;
    }

    .pagination{
      display:flex;
      justify-content:center;
      gap:0.5rem;
      margin-top:2rem;
    }
    .pagination a{
      padding:0.5rem 1rem;
      border:1px solid rgba(139,0,0,0.2);
      border-radius:6px;
      text-decoration:none;
      color:var(--accent);
      font-weight:600;
      transition:all 0.2s;
    }
    .pagination a:hover,.pagination a.active{
      background:var(--accent);
      color:white;
    }

    @media (max-width:768px){
      .achievements-grid{grid-template-columns:1fr}
      .filters{flex-direction:column;align-items:stretch}
      .filters select{width:100%}
      body{padding:1rem}
      .page-header{padding:1.5rem}
      .page-header h1{font-size:2rem}
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Page Header -->
    <div class="page-header">
      <h1>üèÜ Athlete Achievements</h1>
      <p>Celebrating the remarkable accomplishments of Kenyan athletes worldwide</p>
    </div>

    <!-- Filters -->
    <div class="filters">
      <label for="medal-filter">Filter by Medal:</label>
      <select id="medal-filter">
        <option value="">All Medals</option>
        <option value="gold">Gold</option>
        <option value="silver">Silver</option>
        <option value="bronze">Bronze</option>
        <option value="none">Participation</option>
      </select>

      <label for="event-filter">Filter by Event Type:</label>
      <select id="event-filter">
        <option value="">All Events</option>
        <option value="olympics">Olympics</option>
        <option value="world_championships">World Championships</option>
        <option value="commonwealth">Commonwealth Games</option>
        <option value="african_championships">African Championships</option>
        <option value="other">Other</option>
      </select>

      <label for="year-filter">Filter by Year:</label>
      <select id="year-filter">
        <option value="">All Years</option>
        <% const currentYear = new Date().getFullYear(); %>
        <% for(let year = currentYear; year >= 1980; year--){ %>
          <option value="<%= year %>"><%= year %></option>
        <% } %>
      </select>
    </div>

    <!-- Achievements Grid -->
    <div class="achievements-grid">
      <% if (achievements && achievements.length > 0) { %>
        <% achievements.forEach(achievement => { %>
          <div class="achievement-card" data-medal="<%= achievement.medal %>" data-event="<%= achievement.event_type %>" data-year="<%= achievement.year %>">
            <div class="achievement-header">
              <div class="medal-badge <%= achievement.medal %>">
                <% if (achievement.medal === 'gold') { %>ü•á<% } %>
                <% else if (achievement.medal === 'silver') { %>ü•à<% } %>
                <% else if (achievement.medal === 'bronze') { %>ü•â<% } %>
                <% else { %>üèÉ<% } %>
              </div>
            </div>

            <div class="achievement-content">
              <div class="athlete-name"><%= achievement.first_name %> <%= achievement.last_name %></div>
              <div class="event-name"><%= achievement.event_name %></div>

              <div class="event-details">
                <strong>Event Type:</strong> <%= achievement.event_type.replace('_', ' ').replace(/\b\w/g, l => l.toUpperCase()) %><br>
                <strong>Year:</strong> <%= achievement.year %><br>
                <% if (achievement.location) { %>
                  <strong>Location:</strong> <%= achievement.location %><br>
                <% } %>
                <% if (achievement.record_time) { %>
                  <strong>Time/Record:</strong> <%= achievement.record_time %>
                <% } %>
              </div>

              <% if (achievement.description) { %>
                <div class="description"><%= achievement.description %></div>
              <% } %>

              <div class="stats-section">
                <div class="stat-item">
                  <div class="stat-label">Medal</div>
                  <div class="stat-value"><%= achievement.medal.charAt(0).toUpperCase() + achievement.medal.slice(1) %></div>
                </div>
                <div class="stat-item">
                  <div class="stat-label">Year</div>
                  <div class="stat-value"><%= achievement.year %></div>
                </div>
                <div class="stat-item">
                  <div class="stat-label">Event</div>
                  <div class="stat-value"><%= achievement.event_type.replace('_', ' ').replace(/\b\w/g, l => l.toUpperCase()) %></div>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="no-achievements">
          <h3>No achievements found</h3>
          <p>Athlete achievements will appear here once they are added to the platform.</p>
        </div>
      <% } %>
    </div>

    <!-- Pagination (placeholder for future implementation) -->
    <% if (achievements && achievements.length > 12) { %>
      <div class="pagination">
        <a href="#" class="active">1</a>
        <a href="#">2</a>
        <a href="#">3</a>
        <a href="#">Next ‚Üí</a>
      </div>
    <% } %>
  </div>

  <script>
    // Simple client-side filtering
    document.addEventListener('DOMContentLoaded', function() {
      const medalFilter = document.getElementById('medal-filter');
      const eventFilter = document.getElementById('event-filter');
      const yearFilter = document.getElementById('year-filter');
      const cards = document.querySelectorAll('.achievement-card');

      function filterCards() {
        const medalValue = medalFilter.value;
        const eventValue = eventFilter.value;
        const yearValue = yearFilter.value;

        cards.forEach(card => {
          const cardMedal = card.dataset.medal;
          const cardEvent = card.dataset.event;
          const cardYear = card.dataset.year;

          const medalMatch = !medalValue || cardMedal === medalValue;
          const eventMatch = !eventValue || cardEvent === eventValue;
          const yearMatch = !yearValue || cardYear === yearValue;

          if (medalMatch && eventMatch && yearMatch) {
            card.style.display = 'block';
          } else {
            card.style.display = 'none';
          }
        });
      }

      medalFilter.addEventListener('change', filterCards);
      eventFilter.addEventListener('change', filterCards);
      yearFilter.addEventListener('change', filterCards);
    });
  </script>
</body>
</html>
