      </ul>
    </div>

    <form action="/signup" method="POST" id="signupForm" novalidate>
      <!-- User Type Selection -->
      <div class="form-group full">
        <label for="user_type"><i class="fas fa-users"></i> Account Type</label>
        <div class="user-type-options">
          <div class="user-type-option selected" data-value="single">
            <div class="user-type-icon">üë§</div>
            <div class="user-type-name">Single User</div>
            <div class="user-type-desc">For individual athletes, coaches, or sponsors</div>
          </div>
          <div class="user-type-option" data-value="organization">
            <div class="user-type-icon">üè¢</div>
