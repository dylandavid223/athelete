        </div>

        <div class="form-group">
          <label for="confirmPassword"><i class="fas fa-lock"></i> Confirm password</label>
          <div class="password-container">
            <input id="confirmPassword" name="confirmPassword" type="password" required>
            <button type="button" class="toggle-password" id="toggleConfirmPassword">üëÅÔ∏è</button>
          </div>
        </div>

        <div class="form-group full">
          <label for="role"><i class="fas fa-user-tag"></i> Role</label>
          <div class="role-options">
            <div class="role-option" data-value="athlete">
              <div class="role-icon">üèÉ‚Äç‚ôÇÔ∏è</div>
              <div class="role-name">Athlete</div>
            </div>
            <div class="role-option" data-value="coach">
              <div class="role-icon">üë®‚Äçüè´</div>
              <div class="role-name">Coach</div>
            </div>
            <div class="role-option" data-value="sponsor">
              <div class="role-icon">üíº</div>
              <div class="role-name">Sponsor</div>
            </div>
          </div>
          <select id="role" name="role" required style="display: none;">
            <option value="">Select role</option>
            <option value="athlete">Athlete</option>
            <option value="coach">Coach</option>
            <option value="sponsor">Sponsor</option>
          </select>
        </div>

        <div class="form-group">
          <label for="county"><i class="fas fa-map-marker-alt"></i> County</label>
          <input id="county" name="county" type="text" placeholder="e.g. Nandi, Uasin Gishu, Nairobi">
          <span class="input-icon"><i class="fas fa-map-marker-alt"></i></span>
        </div>

        <div class="form-group">
          <label for="phone"><i class="fas fa-phone"></i> Phone (optional)</label>
          <input id="phone" name="phone" type="tel" placeholder="+254 XXX XXX XXX">
          <span class="input-icon"><i class="fas fa-phone"></i></span>
        </div>
      </div>

      <div class="form-footer">
        <button type="submit" class="btn">
          <i class="fas fa-user-plus"></i> Create Account
        </button>
      </div>
    </form>

    <div class="small">
      Already have an account? 
      <a href="/login">
        <i class="fas fa-sign-in-alt"></i> Sign in here
      </a>
    </div>
  </main>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Password visibility toggle
      const togglePassword = document.getElementById('togglePassword');
      const toggleConfirmPassword = document.getElementById('toggleConfirmPassword');
      const passwordInput = document.getElementById('password');
      const confirmPasswordInput = document.getElementById('confirmPassword');
      
      togglePassword.addEventListener('click', function() {
        const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
        passwordInput.setAttribute('type', type);
        togglePassword.textContent = type === 'password' ? 'üëÅÔ∏è' : 'üîí';
      });
      
      toggleConfirmPassword.addEventListener('click', function() {
        const type = confirmPasswordInput.getAttribute('type') === 'password' ? 'text' : 'password';
        confirmPasswordInput.setAttribute('type', type);
        toggleConfirmPassword.textContent = type === 'password' ? 'üëÅÔ∏è' : 'üîí';
      });
      
      // Password strength indicator
      passwordInput.addEventListener('input', function() {
        const password = passwordInput.value;
        const strengthBar = document.querySelector('.password-strength-bar');
        const strengthContainer = document.getElementById('passwordStrength');
        
        // Reset classes
        strengthContainer.className = 'password-strength';
        
        // Check password criteria
        const hasMinLength = password.length >= 8;
        const hasUpperCase = /[A-Z]/.test(password);
        const hasNumber = /[0-9]/.test(password);
        
        // Update hints
        document.getElementById('lengthHint').className = hasMinLength ? 'hint-icon valid' : 'hint-icon invalid';
        document.getElementById('uppercaseHint').className = hasUpperCase ? 'hint-icon valid' : 'hint-icon invalid';
        document.getElementById('numberHint').className = hasNumber ? 'hint-icon valid' : 'hint-icon invalid';
        
        // Calculate strength
        let strength = 0;
        if (hasMinLength) strength++;
        if (hasUpperCase) strength++;
        if (hasNumber) strength++;
        
        // Update strength indicator
        if (strength === 1) {
          strengthContainer.classList.add('weak');
        } else if (strength === 2) {
          strengthContainer.classList.add('medium');
        } else if (strength === 3) {
          strengthContainer.classList.add('strong');
        }
      });

      // Role selection
      const roleOptions = document.querySelectorAll('.role-option');
      const roleSelect = document.getElementById('role');
      
      roleOptions.forEach(option => {
        option.addEventListener('click', function() {
          // Remove selected class from all options
          roleOptions.forEach(opt => opt.classList.remove('selected'));
          
          // Add selected class to clicked option
          this.classList.add('selected');
          
          // Update the hidden select value
          const value = this.getAttribute('data-value');
          roleSelect.value = value;
        });
      });

      // User Type Selection
      const userTypeOptions = document.querySelectorAll('.user-type-option');
      const userTypeInput = document.getElementById('user_type');
      const organizationFields = document.getElementById('organizationFields');
      
      userTypeOptions.forEach(option => {
        option.addEventListener('click', function() {
          // Remove selected class from all options
          userTypeOptions.forEach(opt => opt.classList.remove('selected'));
          
          // Add selected class to clicked option
          this.classList.add('selected');
          
          // Update the hidden input value
          const value = this.getAttribute('data-value');
          userTypeInput.value = value;
          
          // Show/hide organization fields
          if (value === 'organization') {
            organizationFields.classList.add('active');
          } else {
            organizationFields.classList.remove('active');
          }
        });
      });

      // Form validation and submission
      const form = document.getElementById('signupForm');
      const loading = document.getElementById('loading');
      
      form.addEventListener('submit', function(e) {
        const password = passwordInput.value;
        const confirmPassword = confirmPasswordInput.value;
        const userType = userTypeInput.value;
        
        // Check if passwords match
        if (password !== confirmPassword) {
          e.preventDefault();
          alert('Passwords do not match. Please try again.');
          confirmPasswordInput.focus();
          return false;
        }
        
        // Check if role is selected
        if (roleSelect.value === '') {
          e.preventDefault();
          alert('Please select your role.');
          return false;
        }
        
        // Validate organization fields if organization is selected
        if (userType === 'organization') {
          const orgName = document.getElementById('organization_name').value;
          const orgType = document.getElementById('organization_type').value;
          
          if (!orgName.trim()) {
            e.preventDefault();
            alert('Please enter your organization name.');
            document.getElementById('organization_name').focus();
            return false;
          }
          
          if (!orgType) {
            e.preventDefault();
            alert('Please select your organization type.');
            document.getElementById('organization_type').focus();
            return false;
          }
        }
        
        // Show loading animation
        loading.classList.add('active');
      });

      // Add input animations
      const inputs = document.querySelectorAll('input, select');
      inputs.forEach(input => {
        input.addEventListener('focus', function() {
          this.parentElement.classList.add('focused');
        });
        
        input.addEventListener('blur', function() {
          this.parentElement.classList.remove('focused');
        });
      });
    });
  </script>
</body>
