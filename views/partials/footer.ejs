<style>
.site-footer {
    background: #f8f9fa;
    border-top: 1px solid #e9ecef;
    padding: 3rem 0;
    margin-top: 4rem;
}

.footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 2rem;
}

.footer-brand {
    color: #0b6e4f;
}

.footer-brand h3 {
    font-size: 1.5rem;
    margin: 0 0 1rem;
}

.footer-brand p {
    color: #6c757d;
    margin: 0;
    line-height: 1.6;
}

.footer-links h4 {
    color: #333;
    margin: 0 0 1rem;
    font-size: 1.1rem;
}

.footer-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.footer-links li {
    margin-bottom: 0.5rem;
}

.footer-links a {
    color: #6c757d;
    text-decoration: none;
    transition: color 0.2s;
}

.footer-links a:hover {
    color: #0b6e4f;
}

.footer-bottom {
    max-width: 1200px;
    margin: 2rem auto 0;
    padding: 1.5rem 1rem 0;
    border-top: 1px solid #dee2e6;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #6c757d;
    font-size: 0.9rem;
}

.social-links {
    display: flex;
    gap: 1rem;
}

.social-links a {
    color: #6c757d;
    text-decoration: none;
}

.social-links a:hover {
    color: #0b6e4f;
}

@media (max-width: 768px) {
    .footer-container {
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .footer-bottom {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
    }
}
</style>

